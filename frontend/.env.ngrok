# Development Environment Configuration
VITE_APP_TITLE="Training Management System (Development)"
VITE_API_BASE_URL="/api"
VITE_APP_VERSION="1.0.0-dev"
VITE_APP_ENVIRONMENT="development"

# Database Configuration
VITE_DB_TYPE=sqlite

# Feature Flags
VITE_ENABLE_DEBUG=true
VITE_ENABLE_MOCK_DATA=true
VITE_ENABLE_ANALYTICS=false

# Authentication
VITE_AUTH_TOKEN_EXPIRY=3600
VITE_AUTH_REFRESH_THRESHOLD=300

# UI Configuration
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_FILE_SIZE=5242880
VITE_SUPPORTED_FILE_TYPES=pdf,doc,docx,xls,xlsx

# Botswana Specific
VITE_COUNTRY_CODE=BW
VITE_CURRENCY=BWP
VITE_TIMEZONE=Africa/Gaborone
VITE_LANGUAGE=en
